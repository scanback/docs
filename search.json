---
layout: null
permalink: /search.json
---

[
{% assign docs = site.pages | concat: site.posts %}
{% assign first = true %}

{% for doc in docs %}
  {% if doc.title and doc.search != false and doc.exclude_from_search != true and doc.url != "/404.html" %}
    {% unless first %},{% endunless %}
    {% assign first = false %}
    {
      "debug_marker": "INDEX_VERSION_3",
      "title": {{ doc.title | jsonify }},
      "url": {{ doc.url | absolute_url | jsonify }},
      "content": {{ doc.content
        | strip_html
        | replace: "\r", " "
        | replace: "\n", " "
        | replace: "\t", " "
        | replace: "  ", " "
        | strip

        | jsonify }}
    }
  {% endif %}
{% endfor %}
]
